<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <targets>
    <target name="BillingLoggerFile" xsi:type="File" fileName="${basedir}/NLog (do not replace when deploy)/Billing/Billing-${date:format=yyyy-MM-dd}.txt" layout="${message}" />
    <target name="EmailLoggerFile" xsi:type="File" fileName="${basedir}/NLog (do not replace when deploy)/Email/Email-${date:format=yyyy-MM-dd}.txt" layout="${message}" />
    <target name="EmailCleanupLoggerFile" xsi:type="File" fileName="${basedir}/NLog (do not replace when deploy)/EmailCleanup/EmailCleanup-${date:format=yyyy-MM-dd}.txt" layout="${message}" />
    <target name="BillingReportLoggerFile" xsi:type="File" fileName="${basedir}/NLog (do not replace when deploy)/Billing/BillingReport-${date:format=yyyy-MM-dd}.txt" layout="${date:format=yyyyMMddHHmmss} [${level}] ${message}" />
  </targets>
  <rules>
    <logger name="BillingLogger" minlevel="Info" writeTo="BillingLoggerFile" />
    <logger name="EmailLogger" minlevel="Info" writeTo="EmailLoggerFile" />
    <logger name="EmailCleanupLogger" minlevel="Info" writeTo="EmailCleanupLoggerFile" />
    <logger name="BillingReportLogger" minlevel="Info" writeTo="BillingReportLoggerFile" />
  </rules>
</nlog>